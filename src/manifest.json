{
  "manifest_version": 3,
  "name": "Modern SIS",
  "version": "0.1.0.2",
  "description": "A Chrome extension that applies a modern dark mode theme to the AOU Student Information System (SIS).",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.aou.edu.kw/*"],
      "css": ["modern.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_title": "Modern SIS"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "author": "Mohamed A. Abdallah",
  "homepage_url": "https://github.com/MohamedAAbdallah/ModernSIS",
  "short_name": "SIS Darkmode",
  "version_name": "0.1.0.1",
  "web_accessible_resources": [
    {
      "resources": ["modern.css"],
      "matches": ["*://*.aou.edu.kw/*"]
    }
  ]
}
