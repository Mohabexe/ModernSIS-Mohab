{
  "manifest_version": 3,
  "name": "Modern SIS",
  "version": "0.01",
  "description": "Applies a dark mode theme to AOU SIS pages.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://sisksa.aou.edu.kw/*", "*://sis.aou.edu.kw/*"],
      "css": ["modern.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "16.png",
      "128": "128.png"
    },
    "default_title": "Modern SIS"
  }
}
